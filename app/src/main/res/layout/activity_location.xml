<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".LocationActivity"
    >

    <Button
        android:id="@+id/btnQuatroPilastras"
        android:text="Quatro Pilastras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnMuriae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muriaé"
        android:layout_toRightOf="@+id/btnQuatroPilastras"
        android:layout_toLeftOf="@+id/btnVicosa"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnVicosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viçosa"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />

    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnQuatroPilastras"
        android:layout_alignParentBottom="true"
        >


    </fragment>

</RelativeLayout>
